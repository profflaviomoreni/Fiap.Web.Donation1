@model ProdutoModel

<h1>Produto - Editar</h1>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">

                @if( ! string.IsNullOrEmpty(ViewBag.Mensagem) ) {
                    <div class="alert alert-danger">@ViewBag.Mensagem</div>
                }

                <form asp-controller="Produto" asp-action="Editar" method="post">

                    <input type="hidden" name="ProdutoId" value="@Model.ProdutoId" />
                    <div class="form-group">
                        <label>Nome:</label>
                        <input asp-for="Nome" class="form-control w-50" />
                    </div>
                    <div class="form-group">
                        <label>Descrição:</label>
                        <input type="text" name="descricao" value="@Model.Descricao" class="form-control w-75" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" checked="@Model.Disponivel" name="disponivel" class="form-check-input" />
                        <label class="form-check-label">Disponível</label>
                    </div>
                    <div class="form-group">
                        <label>Tipo: @Model.TipoProdutoId </label>
                        <select name="TipoProdutoId" class="form-control w-75">
                            <option value="0">Selecione</option>
                            @foreach (var tipo in ViewBag.TipoProdutos)
                            {
                                if (Model.TipoProdutoId == tipo.TipoProdutoId)
                                {
                                    <option value="@tipo.TipoProdutoId" selected>@tipo.Nome</option>
                                } else
                                {
                                    <option value="@tipo.TipoProdutoId">@tipo.Nome</option>
                                }
                                
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Sugestão de troca:</label>
                        <textarea name="SugestaoTroca" class="form-control w-75">@Model.SugestaoTroca</textarea>
                    </div>
                    <div class="form-group">
                        <label>Valor:</label>
                        <input type="number" name="valor" value="@Model.Valor" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Data da Expiração:</label>
                        <input type="text" name="DataExpiracao" value="@Model.DataExpiracao"
                               class="form-control w-25" />
                    </div>


                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                    </form>
            </div>
        </div>
    </div>

</div>

