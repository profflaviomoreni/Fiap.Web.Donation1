@model Fiap.Web.Donation1.Models.TrocaModel

@{
    ViewData["Title"] = "Index";
}

<h1>Troca</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId1" />
            <div class="form-group">
                <label class="control-label">Nome: @Model.ProdutoModel1.Nome</label>
            </div>
            <div class="form-group">
                <label class="control-label">@Model.ProdutoModel1.Descricao</label>
            </div>
            <div class="form-group">
                <label class="control-label">@Model.ProdutoModel1.Valor</label>
            </div>
            <div class="form-group">
                <label class="control-label">@Model.ProdutoModel1.SugestaoTroca</label>
            </div>
            
            <div class="form-group">
                <label class="control-label">Selecione seu produto:</label>
                <select asp-for="ProdutoId2" class="form-control" asp-items="ViewBag.MeusProdutos">
                    <option value="0">Selecione seu produto</option>
                </select>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
